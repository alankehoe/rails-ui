source 'https://rubygems.org'

# rails
gem 'rails'

# App server
gem 'puma'

# Application config
gem 'settingslogic'

# Logentries
gem 'le'

# Ruby vars in JS
gem 'gon'

# Javascript runtime
gem 'therubyracer',  platforms: :ruby

group :development, :test do
  gem 'jasmine-rails'
end

# Bower
gem 'bower-rails', '~> 0.8.3'

# Use LESS for stylesheets
gem 'less-rails'
gem 'font-awesome-less'

# Use Uglifier and SCSS as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
gem 'sass-rails'
gem 'haml'
gem 'jquery-rails'

gem 'ngannotate-rails'

gem 'oauth2'


