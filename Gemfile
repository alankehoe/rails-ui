source 'https://rubygems.org'

# rails
gem 'rails'

# App server
gem 'puma'

# Application config
gem 'settingslogic'

# Logentries
gem 'le'

# Javascript runtime
gem 'therubyracer',  platforms: :ruby

group :development, :test do
  gem 'jasmine-rails'
end

# Oauth client
gem 'oauth2'

# Bower
gem 'bower-rails'

# Asset preprocessing
gem 'haml'
gem 'less-rails'
gem 'font-awesome-less'
gem 'ngannotate-rails'
gem 'uglifier'
